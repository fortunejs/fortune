{
  "name": "fortune",
  "description": "A library for managing structured data in Node.js and web browsers.",
  "version": "4.0.4",
  "license": "MIT",
  "author": {
    "email": "0x8890@airmail.cc",
    "url": "http://0x8890.com"
  },
  "homepage": "http://fortunejs.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:fortunejs/fortune.git"
  },
  "bugs": "https://github.com/fortunejs/fortune/issues",
  "scripts": {
    "coverage": "istanbul cover test",
    "deploy": "npm run build && ./website/deploy.sh",
    "build": "node website/build && npm run build:browser && npm run build:minified",
    "build:browser": "(node lib/header; browserify lib/global.js) > dist/web/assets/fortune.js",
    "build:minified": "(node lib/header; cat dist/web/assets/fortune.js | uglifyjs -cm) > dist/web/assets/fortune.min.js",
    "lint": "eslint lib",
    "postpublish": "npm run deploy && npm run tag",
    "tag": "git tag `npm v fortune version` && git push origin --tags",
    "test": "npm run lint && npm run test:server && npm run test:browser && npm run test:websocket",
    "test:server": "node test | tf-dot",
    "test:browser": "browserify test/browser.js | tape-run | tf-dot",
    "test:websocket": "node test/integration/net/ws_server.js & browserify test/integration/net/ws_client.js | tape-run | tf-dot",
    "test:website": "npm run build && http-server dist/web"
  },
  "dependencies": {
    "bluebird": "^3.4.0",
    "busboy": "^0.2.13",
    "error-class": "^2.0.0",
    "event-lite": "^0.1.1",
    "fast-crc32c": "^1.0.2",
    "msgpack-lite": "^0.1.20",
    "negotiator": "^0.6.1",
    "ws": "^1.1.0"
  },
  "optionalDependencies": {
    "bufferutil": "^1.2.1",
    "utf-8-validate": "^1.2.1"
  },
  "devDependencies": {
    "@tap-format/dot": "^0.2.0",
    "browserify": "^13.0.1",
    "chalk": "^1.1.3",
    "cssnano": "^3.6.2",
    "docchi": "^0.12.0",
    "eslint": "^2.11.1",
    "eslint-config-boss": "^1.0.3",
    "form-data": "^1.0.0-rc4",
    "highlight.js": "^9.4.0",
    "html-minifier": "^2.1.3",
    "http-server": "^0.9.0",
    "inflection": "^1.10.0",
    "istanbul": "^0.4.3",
    "marked": "^0.3.5",
    "mkdirp": "^0.5.1",
    "mustache": "^2.2.1",
    "normalize.css": "^4.1.1",
    "postcss": "^5.0.21",
    "postcss-cssnext": "^2.6.0",
    "postcss-import": "^8.1.2",
    "rimraf": "^2.5.2",
    "tapdance": "^4.1.1",
    "tape-run": "^2.1.4",
    "uglify-js": "^2.6.2"
  },
  "files": [
    "lib/",
    "test/",
    "LICENSE"
  ],
  "main": "lib/index.js",
  "browser": "lib/browser.js",
  "eslintConfig": {
    "extends": "boss/es5"
  },
  "engines": {
    "node": ">=4.2.0"
  },
  "keywords": [
    "adapter",
    "api",
    "application",
    "data",
    "middleware",
    "serializer",
    "transform"
  ]
}
