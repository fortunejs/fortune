{
  "name": "fortune",
  "description": "Application system for Node.js and web browsers.",
  "version": "1.4.0",
  "license": "MIT",
  "author": {
    "email": "0x8890@airmail.cc",
    "url": "http://0x8890.com"
  },
  "homepage": "http://fortunejs.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:fortunejs/fortune.git"
  },
  "bugs": "https://github.com/fortunejs/fortune/issues",
  "scripts": {
    "deploy": "npm run publish",
    "deploy:website": "npm run build:website && ./website/deploy.sh",
    "build:website": "node website/build",
    "lint": "eslint lib test website",
    "postpublish": "npm run deploy:website",
    "test": "npm run lint && npm run test:server && npm run test:browser",
    "test:server": "node test | tap-dot",
    "test:browser": "browserify test/browser.js | tape-run -b firefox | tap-dot",
    "test:website": "npm run build:website && http-server -p 8890 dist/web"
  },
  "dependencies": {
    "array-buffer": "^1.0.2",
    "busboy": "^0.2.11",
    "chalk": "^1.1.1",
    "clone": "^1.0.2",
    "deep-equal": "^1.0.1",
    "error-class": "^1.1.1",
    "negotiator": "^0.6.0",
    "tapdance": "^3.1.2",
    "ws": "^0.8.0"
  },
  "devDependencies": {
    "browserify": "^11.2.0",
    "cssnext": "^1.8.4",
    "docchi": "^0.11.3",
    "eslint": "^1.7.3",
    "eslint-config-0x8890": "^1.0.0",
    "form-data": "^1.0.0-rc3",
    "highlight.js": "^8.9.1",
    "html-minifier": "^1.0.0",
    "http-server": "^0.8.5",
    "inflection": "^1.7.2",
    "marked": "^0.3.5",
    "mkdirp": "^0.5.1",
    "mustache": "^2.2.0",
    "myth": "^1.5.0",
    "normalize.css": "^3.0.3",
    "rimraf": "^2.4.3",
    "tap-dot": "^1.0.0",
    "tape-run": "^1.1.0"
  },
  "files": [
    "lib/",
    "test/",
    "LICENSE"
  ],
  "main": "lib/index.js",
  "browser": "lib/browser.js",
  "eslintConfig": {
    "extends": "0x8890",
    "ecmaFeatures": {
      "arrowFunctions": false,
      "binaryLiterals": false,
      "blockBindings": false,
      "classes": false,
      "defaultParams": false,
      "destructuring": false,
      "experimentalObjectRestSpread": false,
      "forOf": false,
      "generators": false,
      "globalReturn": false,
      "jsx": false,
      "modules": false,
      "objectLiteralComputedProperties": false,
      "objectLiteralDuplicateProperties": false,
      "objectLiteralShorthandMethods": false,
      "objectLiteralShorthandProperties": false,
      "octalLiterals": false,
      "regexUFlag": false,
      "regexYFlag": false,
      "restParams": false,
      "spread": false,
      "superInFunctions": false,
      "templateStrings": false,
      "unicodeCodePointEscapes": false
    },
    "env": {
      "es6": false
    },
    "rules": {
      "block-scoped-var": 2,
      "func-names": 0,
      "no-var": 0,
      "no-warning-comments": 1,
      "one-var": 0,
      "strict": [ 2, "global" ]
    }
  },
  "engines": {
    "node": ">=4.2.0"
  },
  "keywords": [
    "application",
    "adapter",
    "api",
    "data",
    "hypermedia",
    "rest",
    "serializer",
    "system"
  ]
}
